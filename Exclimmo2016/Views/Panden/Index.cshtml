@model IEnumerable<Exclimmo2016.Models.Pand>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nieuw Pand", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Soort)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransactieType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beschrijving)
        </th>
